{% extends 'Layouts/base.html.twig' %}

{% block body %}
    {% if app.user %}
        <header>
        <nav>
            <ul>
                <li><a href="{{ path('app_home') }}">Page d'acceuil</a></li>
            {% if (app.user.roles[0]== "ROLE_ADMIN") %}
                <li><a href="{{ path('app_sandbox_listclient') }}">Users</a></li>
            {% endif %}
            {% if (app.user.roles[0]== "ROLE_SUPERADMIN") %}
                <li><a href="{{ path('app_sandbox_listadmin') }}">Admins</a></li>
            {% endif %}
            {% if (app.user.roles[0]== "ROLE_USER") or (app.user.roles[0]== "ROLE_ADMIN")  %}
                <li><a href="{{ path('panier_list') }}">Mon Panier ({{ dump(lien.getLien()) }} )</a></li>
                <li><a href="{{ path('app_sandbox_profile',{id:app.user.id}) }}">Profil</a></li>
                <li><a href="{{ path('app_sandbox_listarticle') }}">Liste des articles</a></li>
                <li><a href="{{ path('app_logout') }}">Deconnexion</a></li>
            {% endif %}
            </ul>
        </nav>
    </header>
    {% endif %}
<div>
    <h1>Bonjour</h1>
</div>
    <div>{# Ajout d'un flash #}
        {% if app.session.flashBag.has('info') %}
            <strong>Message d'information</strong>
            <ul>
                {% for msg in app.session.flashBag.get('info') %}
                    <li>{{ msg }}</li>
                {% endfor %}
            </ul>
        {% endif %}
        {% block contenu %}Message par d√©faut{% endblock %}
    </div>
{% endblock %}