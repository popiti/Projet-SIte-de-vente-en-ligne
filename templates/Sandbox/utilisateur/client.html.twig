{% extends 'Layouts/template.html.twig' %}

{% block contenu %}
<table>
    <thead class ="row">
    <tr>
        <th> Login              </th>
        <th> Nom                </th>
        <th> Prenom             </th>
        <th> Role               </th>
        <th> Date de Naissance  </th>
        <th> Modification       </th>
        <th> Suppression        </th>
    </tr>
    </thead>
    <tbody class ="col">
    {% for user in users %}
        <tr>
            <td> {{ user.login }} </td>
            <td> {{ user.nom }} </td>
            <td> {{ user.prenom }} </td>
            <td> {{ user.roles[0] }}                  </td>
            <td> {{ user.birthdate | date('d-m-Y') }} </td>
            <td> <a class ="button button2" href="{{ path('app_sandbox_modifclient',{id:user.id}) }}">Modifier</a>  </td>
            <td> <a class ="button button1" href="{{ path('app_sandbox_deleteclient',{id:user.id}) }}">Suppression</a>   </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}